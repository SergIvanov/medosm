unit main;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, ExtCtrls, Buttons, Menus, Grids, DBGrids, ComCtrls,
  Mask;

type
  TfMain = class(TForm)
    Panel1: TPanel;
    Panel2: TPanel;
    Bevel1: TBevel;
    Label2: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
    Label3: TLabel;
    Button3: TButton;
    Button4: TButton;
    MainMenu1: TMainMenu;
    N1: TMenuItem;
    N2: TMenuItem;
    N3: TMenuItem;
    N4: TMenuItem;
    DBGrid1: TDBGrid;
    Label4: TLabel;
    Edit3: TEdit;
    Label6: TLabel;
    CheckBox1: TCheckBox;
    MaskEdit1: TMaskEdit;
    Button1: TButton;
    N5: TMenuItem;
    N101: TMenuItem;
    N6: TMenuItem;
    N7: TMenuItem;
    N8: TMenuItem;
    N51: TMenuItem;
    N9: TMenuItem;
    Edit4: TEdit;
    Label1: TLabel;
    procedure Button4Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
    procedure DBGrid1DblClick(Sender: TObject);
    procedure CheckBox1Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure N4Click(Sender: TObject);
    procedure N5Click(Sender: TObject);
    procedure N9Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  fMain: TfMain;

implementation

uses DM, editor, newsotr, edspravorg, pril9;

{$R *.dfm}

procedure TfMain.Button4Click(Sender: TObject);
begin
  fDM.TRab.Append;
  fEditor.ShowModal;
end;

procedure TfMain.Button3Click(Sender: TObject);
begin
 fEditor.ShowModal;
end;

procedure TfMain.DBGrid1DblClick(Sender: TObject);
begin
 fEditor.ShowModal;
end;

procedure TfMain.CheckBox1Click(Sender: TObject);
var fil:string;
begin
 if CheckBox1.Checked then
  begin
   if length(Edit1.Text)>0 then begin fDM.TRab.Filtered := True;
   fDM.TRab.Filter := 'fam =' + QuotedStr(Edit1.Text); end;

   if length(Edit2.Text)>0 then begin fDM.TRab.Filtered := True;
   fDM.TRab.Filter := 'imya =' + QuotedStr(Edit2.Text); end;

   if length(Edit3.Text)>0 then begin fDM.TRab.Filtered := True;
   fDM.TRab.Filter := 'fath =' + QuotedStr(Edit4.Text); end;

   if length(Edit4.Text)>0 then begin fDM.TRab.Filtered := True;
   fDM.TRab.Filter := 'id_org =' + QuotedStr(Edit4.Text); end;

   if MaskEdit1.Text<>'  .  .    ' then begin fDM.TRab.Filtered := True;
   fDM.TRab.Filter := 'data_proh =' + QuotedStr(MaskEdit1.Text); end;
  end else  fDM.TRab.Filtered := False;
end;

procedure TfMain.Button1Click(Sender: TObject);
var query:string;
begin
 if MessageDlg('Удалить запись?',mtConfirmation, [mbYes, mbNo], 0) = mrYes then
  begin
   fDM.TRab.Delete;
 end;
end;

procedure TfMain.N4Click(Sender: TObject);
begin
fNewSotr.Showmodal;
end;

procedure TfMain.N5Click(Sender: TObject);
begin
 fEdSpravOrg.Showmodal;
end;

procedure TfMain.N9Click(Sender: TObject);
begin
 fPril9.Showmodal;
end;

end.
